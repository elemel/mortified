<?xml version="1.0" encoding="UTF-8"?>
<module>
  <object>
    <name>wizard</name>
    <control-component>
      <state-machine>
        <state-ref>character-stand</state-ref>
      </state-machine>
    </control-component>
    <physics-component>
      <body>
        <name>body</name>
        <type>dynamic</type>
        <fixed-rotation>true</fixed-rotation>
        <fixture>
          <density>1</density>
          <circle>
            <center>
              <x>0</x>
              <y>0</y>
            </center>
            <radius>0.5</radius>
          </circle>
        </fixture>
      </body>
      <body>
        <name>wheel</name>
        <type>dynamic</type>
        <fixture>
          <density>1</density>
          <circle>
            <center>
              <x>0</x>
              <y>-0.25</y>
            </center>
            <radius>0.35</radius>
          </circle>
        </fixture>
        <fixture>
          <sensor>true</sensor>
          <circle>
            <center>
              <x>0</x>
              <y>-0.25</y>
            </center>
            <radius>0.4</radius>
          </circle>
        </fixture>
      </body>
      <revolute-joint>
        <name>motor</name>
        <body-a-ref>body</body-a-ref>
        <body-b-ref>wheel</body-b-ref>
        <anchor>
          <x>0</x>
          <y>-0.25</y>
        </anchor>
      </revolute-joint>
    </physics-component>
    <graphics-component>
      <sprite>
        <image-ref>mario-body</image-ref>
        <alignment>
          <x>0.5</x>
          <y>0.5</y>
        </alignment>
        <scale>
          <x>0.1</x>
          <y>0.1</y>
        </scale>
        <body-ref>body</body-ref>
      </sprite>
      <sprite>
        <image-ref>mario-head</image-ref>
        <alignment>
          <x>0.4</x>
          <y>0.1</y>
        </alignment>
        <position>
          <x>0</x>
          <y>0.4</y>
        </position>
        <angle>0.2</angle>
        <scale>
          <x>0.1</x>
          <y>0.1</y>
        </scale>
        <body-ref>body</body-ref>
      </sprite>
    </graphics-component>
  </object>
</module>
